lxc profile create display &> /dev/null || true
cat << EOF | lxc profile edit display
config:
  environment.DISPLAY: :0
description: Enables graphical apps use.
devices:
  X0:
    path: /tmp/.X11-unix/X0
    source: /tmp/.X11-unix/X0
    type: disk
  mygpu:
    type: gpu
name: display
used_by: []
EOF
